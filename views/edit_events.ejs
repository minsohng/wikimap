<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Edit Events</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/maps.js"></script>
    <script type="text/javascript" src="/scripts/events.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyKGD0KZJKeuryKROZeOvorSwd739yqO4&libraries=places&callback=initialize" async defer></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>

  </head>

  <body>

    <div>
      <div class="row">


        <div class="col-sm-5 col-md-4 col-xl-3">
          <div class="content-wrapper">
            <h1>Logo</h1>
            <h2><%= email %></h2>
                          <!-- Event address section -->
              <div id="event-address" class="input-group mb-3 sign-in_2">
                <h3>Event Address</h3>
                <form>
                  <input id="searchTextField" type="text" placeholder="Add address">
                  <label id="address_text"></label>

                  <script>


                  </script>

                </form>
              </div>


            <div id="event-form" class="sign-in_2">
              <h3>Edit Event Info</h3>
              <form method="POST" action="/events/<%= eventId %>?_method=PUT">
                <input type="text" name="name" value="<%= eventInfo[0].name%>">
                <textarea name="description"><%= eventInfo[0].description%></textarea>
                <h6>Start Date</h6>

                <input type="date" name="start_date" value="<%= eventInfo[0].start_date%>">
                <h6>End Date</h6>
                <input type="date" name="end_date" value="<%= eventInfo[0].end_date%>">
                <input type="text" name="url" value="<%= eventInfo[0].url%>">
                <input type="text" name="img_url" value="<%= eventInfo[0].img_url%>">
                <input type="text" id="lng" name="lng">
                <input type="text" id="lat" name="lat">
                <button id="event-btn" type="submit">Edit Event</button>
              </form>
            </div>

          </div>
        </div>


        <div class="col-sm-7 col-md-8 col-xl-9">
             <div id="map"></div>
        </div>


      </div>
    </div>

    <script>

    </script>
  </body>
</html>

