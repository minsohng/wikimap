<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create Map</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/maps.js"></script>
    <script type="text/javascript" src="/scripts/events.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyKGD0KZJKeuryKROZeOvorSwd739yqO4&callback=initMap"
    async defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>

  </head>

  <body>

    <div>
      <div class="row">
        <div class="col-sm-5 col-md-4 col-xl-3">
          <div class="content-wrapper">
             <img src="https://github.com/minsohng/wikimap/blob/Diana7/img/Screen%20Shot%202019-04-27%20at%202.10.00%20PM.png?raw=true" alt="Logo" id='logo'></img>
            <h2><%= email %></h2>
            <a href="/profiles"><button class="reg-btn" type="button">Profile</button></a>
            <form class="delete-btn" method="POST" action="/logout">
              <button class="reg-btn" type="button">Logout</button>
            </form>
            <div class="sign-in_2">
              <h2>Created Map</h2>

              <% maps.forEach( function(e) { %>
                <% if (e.user_id === user_id) { %>
                 <button style="display: inline-block; width: 70%;"contenteditable class="map-select btn btn-primary btn-block" mapId=<%=e.id%>><%=e.name%></button>
                 <form class="delete-btn" method="POST" action="/maps/<%= e.id %>?_method=DELETE">
                 <button eventsId= "<%= e.id %> "class="delete-btn map-select btn btn-primary"role="button">Delete</button>
                </form>
                <% } %>
              <% }); -%>
            </div>
            <div class="sign-in_2">
              <h2>Contributed Map</h2>

              <% maps.forEach( function(e) { %>
                <% if (e.user_id !== user_id) { %>
                  <button contenteditable class="map-select btn btn-primary btn-block" mapId=<%=e.id%>><%=e.name%></button>
                <%} %>
              <% }); -%>
            </div>


          </div>
        </div>
        <div class="col-sm-7 col-md-8 col-xl-9">
             <div id="map"></div>
        </div>
      </div>
    </div>

  </body>
</html>
