<!DOCTYPE html>

<html lang="en">
  <head>
    <title>Create Map</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/maps.js"></script>
    <script type="text/javascript" src="/scripts/events.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyKGD0KZJKeuryKROZeOvorSwd739yqO4&libraries=places&callback=initialize" async defer></script>



  </head>

  <body>

    <div id="event-contain">

      <div class="row">
        <div class="col-sm-5 col-md-4 col-xl-3">
          <div class="content-wrapper">
            <h1>Logo</h1>
            <h2><%=email%></h2>
            <a href="/profiles"><button class="reg-btn" type="button">Profile</button></a>


              <!-- Create or choose a map section -->
              <div id="choose-map" class="sign-in_2">
                <h2>Choose Or<br> Create A Map</h2>
                <div class="input-group mb-3">
                  <div class="drop-down-contain">
                    <button class="drop-down">Choose</button>


                    <% mymaps.forEach( function(e) { %>

                    <button class="drop-down-item" mapId= <%=e.id %> ><%= e.name %></button>

                    <% });%>
                    <button class="drop-down-item">+ Create Map</button>

                  </div>
                </div>
              </div>


              <!-- Event address section -->
              <div id="event-address" class="input-group mb-3 sign-in_2">
                <h3>Event Address</h3>
                <form>
                  <input id="searchTextField" type="text" placeholder="Add address">
                  <label id="address_text"></label>

                  <script>


                  </script>

                </form>
              </div>


              <!-- Event info form section -->
              <div id="event-form" class="sign-in_2">
                <h3>Event Info</h3>
                <form method="POST" action="/events">
                  <input type="text" name="eventName" placeholder="Name Of Event">
                  <textarea placeholder="Description" name="eventDescription"></textarea>
                  <h6>Start Date</h6>
                  <input type="date" name="startDate">
                  <h6>End Date</h6>
                  <input type="date" name="endDate">
                  <input type="text" name="eventURL" placeholder="Event URL">
                  <input type="text" name="imageURL" placeholder="Image URL">

                  <input type="text" id="lng" name="lng">
                  <input type="text" id="lat" name="lat">
                  <input type="text" id="id" name="mapid">
                  <button id="event-btn" type="submit">Create Event</button>
                </form>
              </div>
            </div>
          </div>

          <div class="col-sm-7 col-md-8 col-xl-9">
               <div id="map"></div>
          </div>
        </div>
      </div>

  </body>

</html>
